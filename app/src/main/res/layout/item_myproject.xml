<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/myProject_item_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_myProject_item"
            android:layout_width="@dimen/imageview_myproject_item_width"
            android:layout_height="@dimen/imageview_myproject_item_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/imageview_myproject_margin"
            android:src="@color/colorCyan"/>

        <LinearLayout
            android:layout_width="@dimen/textview_myproject_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/imageview_myproject_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_myProject_projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCyan"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/textview_myproject_textsize"/>

            <TextView
                android:id="@+id/tv_myProject_projectTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/textview_myproject_time_textsize"/>
            <TextView
                android:id="@+id/tv_SignInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/textview_myproject_time_textsize"/>

            <TextView
                android:id="@+id/tv_SignOutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/textview_myproject_time_textsize"/>

            <TextView
                android:id="@+id/tv_LengthTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/textview_myproject_time_textsize"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_myProject_state"
                android:layout_width="@dimen/textview_myproject_state_heigth"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/imageview_myproject_margin"
                android:background="@color/colorCyan"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="@dimen/textview_myproject_textsize"/>

            <TextView
                android:id="@+id/tv_myProject_evaluate"
                android:layout_width="@dimen/textview_myproject_state_heigth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/imageview_myproject_margin"
                android:background="@color/colorBlue"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:textSize="@dimen/textview_myproject_textsize"/>

            <TextView
                android:id="@+id/tv_myProject_send_show"
                android:layout_width="@dimen/textview_myproject_state_heigth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/imageview_myproject_margin"
                android:background="@color/colorRed"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:textSize="@dimen/textview_myproject_textsize"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>